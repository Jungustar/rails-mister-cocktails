<div class="container mb-5" >
  <p>Find me in app/views/doses/new.html.erb</p>
</div>

<div class="container my-5">
  <h1>Doses for <%= @cocktail.name %></h1>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient, collection: Ingredient.all, input_html: { class: 'select-dropdown' }, include_hidden: false %>
    <%= f.input :description %>
    <%= f.submit "Save", class: "btn btn-ghost" %>
  <% end %>
</div>
