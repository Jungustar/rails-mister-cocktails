<div class="home-banner">
  <h1>Cocktailo</h1>
  <p>Beautiful & Simple Cocktail Finder</p>
</div>
  <div class="container mt-5">
      <div class="cards">
      <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1513558161293-cdaf765ed2fd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80)">
        <%= link_to cocktail.name, cocktail_path(cocktail), class: "nav-link" %>
        </div>
    <% end %>
  </div>
</div>
